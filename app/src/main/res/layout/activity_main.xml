<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
         />

    <com.google.android.material.slider.Slider
        android:layout_width="275dp"
        android:layout_height="69dp"
        android:id="@+id/slider1"
        >

    </com.google.android.material.slider.Slider>

    <com.google.android.material.slider.Slider
        android:id="@+id/slider2"
        android:layout_width="275dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tw1">
    </com.google.android.material.slider.Slider>

    <com.google.android.material.slider.Slider
        android:id="@+id/slider3"
        android:layout_width="275dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tw2"
        android:value="@color/purple_200">
    </com.google.android.material.slider.Slider>

    <TextView
        android:id="@+id/tw1"
        android:layout_width="272dp"
        android:layout_height="40dp"
        android:layout_below="@+id/slider1"
        android:layout_marginTop="23dp"
        android:text="red">

    </TextView>
    <TextView
        android:id="@+id/tw2"
        android:layout_width="272dp"
        android:layout_height="40dp"
        android:layout_below="@+id/slider2"
        android:layout_marginTop="23dp"
        android:text="green">

    </TextView>
    <TextView
        android:id="@+id/tw3"
        android:layout_width="272dp"
        android:layout_height="40dp"
        android:layout_below="@+id/slider3"
        android:layout_marginTop="23dp"
        android:text="blue">

    </TextView>

    <TextView
        android:id="@+id/tw4"
        android:layout_width="272dp"
        android:layout_height="40dp"
        android:layout_below="@+id/tw3"
        android:layout_marginTop="61dp"
        android:text="rgb">

    </TextView>
</RelativeLayout>